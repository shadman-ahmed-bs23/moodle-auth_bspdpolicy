{{!
    @template auth_adminauth/input_token
    Example context (json):
    {

    }
}}
<link rel="stylesheet" href="auth_bspdpolicy_style.css">

<div>
    <div class="d-flex justify-content-center">
        <div class="card">
            <h2 class="card-header text-center">{{ sitename }}</h2>
            <div class="card-body p-5">
                <div class="row justify-content-md-center">
                    <div class="col-md-12">
                        {{#iswrong}}
                            <div class="alert alert-danger" role="alert">
                                {{ warningmessage }}
                            </div>
                        {{/iswrong}}
                        {{#isexpired}}
                            <div class="alert alert-danger" role="alert">
                                {{ expiredtokenmsg }} {{ text1 }} <a href="{{ loginurl }}">{{ loginbtntext }}</a> {{text2}}.
                            </div>
                        {{/isexpired}}
                        <form class="mt-3">
                            <input
                                type="hidden"
                                name="username"
                                id="username"
                                class="form-control"
                                value="{{ username }}"
                            />
                            <input
                                type="text"
                                id="token"
                                name="token"
                                class="form-control"
                                placeholder="{{ tokenplaceholder }}" />
                            <input
                                type="submit"
                                class="btn btn-primary btn-block mt-3"
                                id="loginbtn"
                                value="{{{ loginbtntext }}}"
                            />
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
