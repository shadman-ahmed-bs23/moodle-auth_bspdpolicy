<h1 id="title">Input token:</h1>
<form>
    <input
            type="hidden"
            name="username"
            id="username"
            class="form-control"
            value="{{ username }}"
    />
    <label for="token">Token: </label>
    <input type="text" id="token" name="token" /><br /><br />
    <input
            type="submit"
            class="btn btn-primary btn-block mt-3"
            id="loginbtn"
            value="login"
    />
</form>
